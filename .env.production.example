APP_NAME=Administration
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://administration.mgs-local.mg

# Custom project URLs (used by config/custom.php)
CUSTOM_API_URL=https://administration.mgs-local.mg/api
CUSTOM_FRONTEND_URL=https://administration.mgs-local.mg
CUSTOM_MOBILE_URL=https://administration.mgs-local.mg

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Base de données principale (administration)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=cpanel_user_mgs_administration
DB_USERNAME=cpanel_user_dbuser
DB_PASSWORD=CHANGEZ_MOI

# Sessions partagées entre applications
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.mgs-local.mg
SESSION_CONNECTION=administration

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# Mail configuration (optionnel)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mgs-local.mg
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@mgs-local.mg"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"
